<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%=user._id%>/foods/new">Add New Item</a><br>
    <% if (pantries.length > 0) { %>
        <ul>
            <% pantries.forEach((pantry)=>{ %>
            <a href="/users/<%= user._id %>/foods/<%= pantry._id %>/edit">
            <li><%= pantry.name %></li>
            </a>
            <form
              action="/users/<%= user._id %>/foods/<%= pantry._id %>?_method=DELETE"
              method="POST"
            >
              <button type="submit">Delete Pantry</button>
            </form>
        <% }) %>
        </ul>
    <% } else { %>
        <h3>There are no items in this Pantry</h3>
    <% } %>
  </body>
</html>
